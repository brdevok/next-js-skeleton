{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "_app/*": [
        "app/*"
      ],
      "_public/*": [
        "public/*"
      ],
      "_storybook/*": [
        ".storybook/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "jest.config.ts",
    "eslint.config.mjs",
    "stylelint.config.mjs",
		"commitlint.config",
    ".rules/**/*.{js,mjs,ts}",
    ".scripts/**/*.ts",
    ".storybook/**/*.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".rules/stylelint.mjs",
    ".rules/eslint.mjs",
    "jest-setup/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
