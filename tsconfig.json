{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
		"strictNullChecks": true,
    "jsx": "preserve",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"_app/*": ["app/*"],
			"_public/*": ["public/*"],
			"_storybook/*": [".storybook/*"],
		},
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
		"eslint.config.mjs",
		".eslint/**/*.js",
		".storybook/**/*.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
  ]
}
